<h1>Listing movie_items</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Cart</th>
      <th>Quantity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_items.each do |movie_item| %>
      <tr>
        <td><%= movie_item.movie_id %></td>
        <td><%= movie_item.cart_id %></td>
        <td><%= movie_item.quantity %></td>
        <td><%= link_to 'Show', movie_item %></td>
        <td><%= link_to 'Edit', edit_movie_item_path(movie_item) %></td>
        <td><%= link_to 'Destroy', movie_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

