<div class="container">
  <h1>All Movies</h1>

  <table class="table table-responsive">
  <thead>
    <tr>
    <th>Image</th>
      <th>Title</th>
      <th>Release year</th>
      <th>Price</th>
      <th>Description</th>
      <th>Director</th>
      <th>stock</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
       <td><%#= image_tag movie.poster.url(:medium), class: "img-responsive"%></td>
        <td><%= movie.title %></td>
        <td><%= movie.release_year %></td>
        <td><%= print_price movie.price %></td>
        <td><%= movie.description %></td>
        <td><%= movie.director %></td>
        <td><%= movie.stock %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <%= link_to 'New Movie', new_movie_path %>
</div>